{
    "include": ["../client"],
    "compilerOptions": {
        "baseUrl": "./",
        "module": "es6",
        "target": "es5",
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true
    }
}
